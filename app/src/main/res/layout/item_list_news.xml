<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="7dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="7dp"
            cardview:cardElevation="5dp"
            cardview:cardCornerRadius="15dp">

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_news_item"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/newsImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".20"
                        android:scaleType="fitXY"
                        android:src="@drawable/album3" />

                    <androidx.percentlayout.widget.PercentRelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".30"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:id="@+id/txtNewsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_widthPercent="100%"
                            app:layout_heightPercent="25%"
                            android:text="News Title"
                            android:textSize="18dp"
                            android:gravity="center_vertical"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txtNewsContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtNewsTitle"
                            app:layout_widthPercent="100%"
                            app:layout_heightPercent="60%"
                            android:text="News Content"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/txtDateOfNews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtNewsContent"
                            app:layout_widthPercent="100%"
                            app:layout_heightPercent="15%"
                            android:gravity="end"
                            android:text="25/06/2019"
                            android:textSize="14dp"
                            android:layout_marginEnd="7dp"
                            android:textStyle="italic"/>
                    </androidx.percentlayout.widget.PercentRelativeLayout>

                </LinearLayout>
            </androidx.percentlayout.widget.PercentRelativeLayout>


        </androidx.cardview.widget.CardView>
</RelativeLayout>

