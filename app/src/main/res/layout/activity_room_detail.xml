<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RoomDetailActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_keyboard_arrow_left_white_24dp"
                    android:onClick="clickToBack"
                    />
                <TextView
                    android:id="@+id/lbRoomNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="6%"
                    android:text="Room Detail"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/backGroundTaskbar"/>

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDetail"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="15dp"
                    android:layout_margin="5dp"

                    >

                    <androidx.percentlayout.widget.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/back_ground_room_detail"
                        android:padding="10dp">
                        <!--left -->
                        <TextView
                            android:id="@+id/txtRoomID"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            app:layout_widthPercent="50%"
                            android:textColor="@color/white"
                            android:text="Code: ABCD "

                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/txtRoomNumber"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_below="@+id/txtRoomID"
                            app:layout_widthPercent="50%"
                            android:textColor="@color/white"
                            android:text="Room number: 100"
                            android:gravity="center_vertical"/>



                        <TextView
                            android:id="@+id/txtDistrict"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_below="@+id/txtRoomNumber"
                            app:layout_widthPercent="50%"
                            android:textColor="@color/white"
                            android:text="District: Quan 12"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/txtUnpayBillNumber"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_below="@+id/txtDistrict"
                            app:layout_widthPercent="50%"
                            android:textColor="@color/white"
                            android:text="Unpay bill: 1"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/txtTotalBillNumber"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_below="@+id/txtUnpayBillNumber"
                            app:layout_widthPercent="50%"
                            android:textColor="@color/white"
                            android:text="Total bill: 15"
                            android:gravity="center_vertical"/>
                        <!--<TextView-->
                            <!--android:id="@+id/txtAddress"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textStyle="bold"-->
                            <!--android:textSize="17dp"-->
                            <!--android:layout_below="@+id/txtTotalBillNumber"-->
                            <!--android:textColor="@color/white"-->
                            <!--app:layout_widthPercent="100%"-->
                            <!--android:text="Address: 394/102 kp1 phuong trung mi tay Quan 12"-->
                            <!--android:gravity="center_vertical"/>-->
                        <!--right -->
                        <TextView
                            android:id="@+id/txtSignDate"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_toRightOf="@+id/txtRoomID"
                            app:layout_widthPercent="50%"
                            android:textColor="@color/white"
                            android:text="Sign date: 06/07/2019"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/txtExpireDate"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_below="@+id/txtSignDate"
                            app:layout_widthPercent="50%"
                            android:textColor="@color/white"
                            android:text="Expire date: 06/08/2019"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/txtOwnerName"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_below="@+id/txtExpireDate"
                            app:layout_widthPercent="50%"
                            android:textColor="@color/white"
                            android:text="Owner: Dang Huu Le"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/txtApartment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_below="@+id/txtOwnerName"
                            app:layout_widthPercent="50%"
                            android:textColor="@color/white"
                            android:text="Apartment: Chung cu the perk"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"/>

                    </androidx.percentlayout.widget.PercentRelativeLayout>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/billListTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/cardViewDetail"
                    android:textSize="35dp"
                    android:text="Bill List"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:background="@color/backGroundBillCardView"/>
                <FrameLayout
                    android:id="@+id/fragmentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/billListTitle">

                </FrameLayout>

            </androidx.percentlayout.widget.PercentRelativeLayout>

        </LinearLayout>




    </FrameLayout>

</RelativeLayout>